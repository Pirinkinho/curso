

<!-- Plantilla (unidad.ejs)
En views/unidad.ejs, diseña la página para el convertidor de unidades: -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Convertidor de Unidades</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <h1>Convertidor de Unidades</h1>
  <form action="/unidad" method="post">
    <input type="number" name="value" placeholder="Valor" required>
    <input type="text" name="fromUnit" placeholder="Unidad origen (e.g., m)" required>
    <input type="text" name="toUnit" placeholder="Unidad destino (e.g., cm)" required>
    <button type="submit">Convertir</button>
  </form>
  <% if (result !== null) { %>
    <p>Resultado: <%= result %></p>
  <% } %>
</body>
</html>

